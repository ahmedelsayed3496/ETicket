@model ETicket.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Create New Category</h4>
                </div>
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="Category" asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                                    <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter category name" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success me-2 px-4">Save</button>
                            <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
