<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ETicket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ETicket.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <!-- Logo and Website Name -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Movie" asp-action="Index">
                    <img src="~/images/logo.png" alt="ETicket Logo" class="logo">
                </a>

                <!-- Mobile Menu Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links (Centered) -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Movie" asp-action="Index">Movies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Category" asp-action="Index">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Cinema" asp-action="Index">Cinemas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Actor" asp-action="Index">Actors</a>
                        </li>
                    </ul>
                </div>

                <!-- Search Bar in Navbar -->
                <form class="d-flex ms-3" action="@Url.Action("Search", "Movie")" method="get">
                    <input class="form-control me-2" type="search" name="query" value="@ViewData["SearchQuery"]"
                           placeholder="Search movies..." aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">Search</button>
                </form>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light text-center py-3 mt-4">
        <div class="container">
            <p class="mb-1">&copy; 2025 - ETicket</p>
            <p>
                <a class="text-light text-decoration-none" asp-controller="Home" asp-action="Privacy">Privacy Policy</a> |
                <a class="text-light text-decoration-none" asp-controller="Movie" asp-action="Index">Movies</a> |
                <a class="text-light text-decoration-none" asp-controller="Category" asp-action="Index">Categories</a> |
                <a class="text-light text-decoration-none" asp-controller="Actor" asp-action="Index">Actors</a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
